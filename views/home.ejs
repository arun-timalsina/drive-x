<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    // Automatically hide messages after 5 seconds
    setTimeout(() => {
      const messages = document.querySelectorAll('.flash-message');
      messages.forEach(message => message.remove());
    }, 2000);
  </script>
</head>
<body class="bg-gray-100">
  <div class="container mx-auto p-4">
     <!-- Logout Button -->
     <form action="/user/logout" method="post" class="flex-1">
      <button type="submit" class="bg-gray-500 text-white px-4 py-2 rounded w-full">Logout</button>
    </form>
    <h1 class="text-2xl font-bold mb-4">Welcome, <%= user.username %>!</h1>
    <div>
      <div class="flex gap-4 mb-4 mt-4">
        <a href="/user/register" class="bg-blue-500 text-white px-4 py-2 rounded">Register</a>
        <a href="/user/login" class="bg-green-500 text-white px-4 py-2 rounded">Login</a>
        <a href="/home" class="bg-purple-500 text-white px-4 py-2 rounded">Home</a>
      </div>
    </div>

    <!-- Upload Form -->
    <form action="/upload-file" method="post" enctype="multipart/form-data" class="mb-4">
      <input type="file" name="file" required class="mb-2">
      <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded">Upload File</button>
    
      <!-- progress bar
      <progress value="0" max="100" id="progressBar"></progress>
      <p id="status"></p>
      <p id="loaded_n_total"></p> -->


    </form>

    <!-- Display success/error messages -->
    <% if (message) { %>
      <div class="flash-message bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
        <%= message %>
      </div>
    <% } %>
    <% if (error) { %>
      <div class="flash-message bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <%= error %>
      </div>
    <% } %>

    <!-- List of Uploaded Files -->
    <div class="mt-8">
      <h2 class="text-xl font-semibold mb-4">Your Uploaded Files</h2>
      <% if (files && files.length > 0) { %>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <% files.forEach(file => { %>
            <div class="bg-white p-4 rounded-lg shadow-md flex items-center gap-4">
              <!-- File Preview -->
              <div class="flex-shrink-0">
                <% if (file.fileName.endsWith('.jpg') || file.fileName.endsWith('.jpeg') || file.fileName.endsWith('.png')) { %>
                  <img src="<%= file.fileUrl %>" alt="<%= file.fileName %>" class="w-16 h-16 object-cover rounded">
                <% } else { %>
                  <div class="w-16 h-16 bg-gray-200 flex items-center justify-center rounded">
                    <span class="text-gray-500 text-2xl">ðŸ“„</span>
                  </div>
                <% } %>
              </div>

              <!-- File Details -->
              <div class="flex-grow">
                <p class="text-lg font-medium truncate"><%= file.fileName %></p>
                <p class="text-sm text-gray-500">Uploaded on: <%= file.uploadDate.toLocaleString() %></p>
              </div>

              <!-- Download and Delete Buttons -->
              <div class="flex gap-2">
                <a href="<%= file.fileUrl %>" download class="bg-blue-500 text-white px-4 py-2 rounded">Download</a>
                <form action="/delete-file/<%= file._id %>" method="post">
                  <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded">Delete</button>
                </form>
              </div>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <p class="text-gray-600">No files uploaded yet.</p>
      <% } %>
    </div>
  </div>
</body>
</html>