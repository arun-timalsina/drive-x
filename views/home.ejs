<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    // Automatically hide messages after 5 seconds
    setTimeout(() => {
      const messages = document.querySelectorAll('.flash-message');
      messages.forEach(message => message.remove());
    }, 2000);
  </script>
</head>
<body class="bg-gray-100">

  
  <div class="container mx-auto p-4">
    <h1 class="text-2xl font-bold mb-4">Welcome, <%= user.username %>!</h1>
    <div>
    <div class="flex gap-4 mb-4 mt-4 "> 
      <a href="/user/register" class="bg-blue-500 text-white px-4 py-2 rounded">Register</a>
      <a href="/user/login" class="bg-green-500 text-white px-4 py-2 rounded">Login</a>
      <a href="/home" class="bg-purple-500 text-white px-4 py-2 rounded">Home</a>
    </div>
    </div>
    <form action="/upload-file" method="post" enctype="multipart/form-data" class="mb-4">
      <input type="file" name="file" required class="mb-2">
      <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded">Upload File</button>
    </form>

    <!-- Display success/error messages -->
    <% if (message) { %>
      <div class="flash-message bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
        <%= message %>
      </div>
    <% } %>
    <% if (error) { %>
      <div class="flash-message bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <%= error %>
      </div>
    <% } %>
  </div>
</body>
</html>